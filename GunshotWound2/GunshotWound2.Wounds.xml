<?xml version="1.0" encoding="utf-8"?>
<WoundConfig>
    <PainfulWoundPercent Value="0.5"/>
    <!-- Any wound with value more than PainfulWoundPercent * MaxPain will add painful-wound effects -->

    <RagdollOnPainfulWound Value="TRUE"/>
    <!-- If TRUE - peds(including player) will set to short ragdoll on painful wounds -->

    <UseCustomUnconsciousBehaviour Value="TRUE"/>
    <!-- If TRUE - you will see various ped behaviour when they're unconscious, otherwise will be used common ragdoll -->

    <DelayedPainPercent Value="0.3"/>
    <!-- 0.3 means 30% of wound pain will be applied with delay(because of adrenaline) -->

    <DeadlyPainShockPercent Value="3.0"/>
    <!-- 3.0 means 300% of PainShockThreshold will lead to instant death by pain shock -->

    <MoveRateOnFullPain Value="0.8"/>
    <!-- Move rate on 100% of pain -->

    <MoveRateOnLegsCrit Value="0.7"/>
    <!-- Move rate when Legs are critically damaged -->

    <OverallDamageMult Value="1"/>
    <!-- Overall damage multiplier, 0.5 means every wound will deal 50% of damage to ped -->

    <DamageDeviation Value="0.2"/>
    <!-- 0.2 means +-20% random damage -->

    <OverallBleedingMult Value="1.2"/>
    <BleedingDeviation Value="0.2"/>

    <OverallPainMult Value="1.0"/>
    <PainDeviation Value="0.2"/>

    <Wounds>
        <!--
        Example:
        <Wound Key="" LocKey="" IsBlunt="" Damage="" Bleed="" Pain="" CanCauseTrauma=""/>
        -->

        <!-- Impact wounds -->
        <Wound Key="LightBruise" LocKey="LightBruiseOn" IsBlunt="TRUE" Damage="2" Pain="15"/>
        <Wound Key="MediumBruise" LocKey="MediumBruiseOn" IsBlunt="TRUE" Damage="4" Pain="25"/>
        <Wound Key="HeavyBruise" LocKey="HeavyBruiseOn" IsBlunt="TRUE" CanCauseTrauma="TRUE" Damage="5" Pain="39"/>
        <Wound Key="AbrasionWound" LocKey="AbrasionWoundOn" IsBlunt="TRUE" Damage="2" Bleed="0.15" Pain="15"/>

        <!-- Cutting wounds -->
        <Wound Key="IncisionWound" LocKey="IncisionWoundOn" Damage="5" Bleed="0.3" Pain="20"/>
        <Wound Key="LacerationWound" LocKey="LacerationWoundOn" CanCauseTrauma="TRUE"
               Damage="10" Bleed="0.8" Pain="30"/>
        <Wound Key="StabWound" LocKey="StabWoundOn" CanCauseTrauma="TRUE"
               Damage="15" Bleed="0.6" Pain="40"/>

        <!-- Gunshot wounds -->
        <Wound Key="GrazeGsw" LocKey="GrazeGswOn" Damage="7" Bleed="0.05" Pain="15"/>
        <Wound Key="FleshGsw" LocKey="FleshGswOn" Damage="10" Bleed="0.1" Pain="30"/>
        <Wound Key="PenetratingGsw" LocKey="PenetratingGswOn" CanCauseTrauma="TRUE"
               Damage="15" Bleed="0.2" Pain="40"/>
        <Wound Key="PerforatingGsw" LocKey="PerforatingGswOn" CanCauseTrauma="TRUE"
               Damage="10" Bleed="0.3" Pain="30"/>
        <Wound Key="AvulsiveGsw" LocKey="AvulsiveGswOn" CanCauseTrauma="TRUE"
               Damage="15" Bleed="0.35" Pain="50"/>
    </Wounds>
</WoundConfig>