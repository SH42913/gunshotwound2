<?xml version="1.0" encoding="utf-8"?>
<WoundConfig>
    <GlobalMultipliers DamageMult="1.0" BleedMult="1.0" PainMult="1.0"/>
    <!-- 0.5 for Damage means every wound will deal 50% of its damage to ped -->

    <GlobalDeviations Damage="0.2" Bleed="0.2" Pain="0.2"/>
    <!-- 0.2 for Damage means +-20% to damage value of every new wound -->

    <Takedown RagdollDurationMs="4000" DamageMult="1.0" BleedMult="1.0" PainMult="1.0"/>
    <!-- Heavy melee attack(eg, using R key) named "takedown".
    It will cause special wound with custom duration ragdoll. -->

    <UseCustomUnconsciousBehaviour Value="TRUE"/>
    <!-- If TRUE - you will see various ped behaviour when they're unconscious, otherwise will be used common ragdoll -->

    <DelayedPainPercent Value="0.3"/>
    <!-- 0.3 means 30% of wound pain will be applied with delay(because of adrenaline) -->

    <DeadlyPainShockPercent Value="3.0"/>
    <!-- 3.0 means 300% of PainShockThreshold will lead to instant death by pain shock -->

    <PainfulWoundPercent Value="0.5"/>
    <!-- Any wound with value more than PainfulWoundPercent * MaxPain will add painful-wound effects -->

    <RagdollOnPainfulWound Value="TRUE"/>
    <!-- If TRUE - peds(including player) will set to short ragdoll on painful wounds -->

    <Wounds>
        <!--
        Example:
        <Wound Key="" LocKey="" IsBlunt="" Damage="" Pain="" Bleed="" CanCauseTrauma=""/>
        -->

        <!-- Blunt wounds -->
        <Wound Key="LightBruise" LocKey="Wounds.Blunt.LightBruise"
               IsBlunt="TRUE" Damage="0" Pain="5"/>
        <Wound Key="MediumBruise" LocKey="Wounds.Blunt.MediumBruise"
               IsBlunt="TRUE" Damage="1" Pain="10"/>
        <Wound Key="HeavyBruise" LocKey="Wounds.Blunt.HeavyBruise"
               IsBlunt="TRUE" CanCauseTrauma="TRUE"
               Damage="2" Pain="20"/>
        <Wound Key="BluntHematoma" LocKey="Wounds.Blunt.Hematoma"
               IsBlunt="TRUE" Damage="3" Pain="25" Bleed="0.01"/>
        <Wound Key="BluntAbrasion" LocKey="Wounds.Blunt.Abrasion"
               IsBlunt="TRUE"  Damage="1" Pain="8" Bleed="0.02"/>
        <Wound Key="BluntLaceration" LocKey="Wounds.Blunt.Laceration"
               IsBlunt="TRUE" CanCauseTrauma="TRUE"
               Damage="4" Pain="15" Bleed="0.04"/>

        <!-- Cutting wounds -->
        <Wound Key="IncisedCut" LocKey="Wounds.Cut.Incised"
               Damage="2" Pain="15" Bleed="0.05"/>
        <Wound Key="DeepIncisedCut" LocKey="Wounds.Cut.DeepIncised"
               CanCauseTrauma="TRUE"
               Damage="4" Pain="20" Bleed="0.12"/>
        <Wound Key="SlashCut" LocKey="Wounds.Cut.Slash"
               CanCauseTrauma="TRUE"
               Damage="3" Pain="15" Bleed="0.08"/>
        <Wound Key="LacerationCut" LocKey="Wounds.Cut.Laceration"
               CanCauseTrauma="TRUE"
               Damage="5" Pain="18" Bleed="0.1"/>
        <Wound Key="StabCut" LocKey="Wounds.Cut.Stab"
               CanCauseTrauma="TRUE"
               Damage="6" Pain="25" Bleed="0.15"/>
        <Wound Key="ChopCut" LocKey="Wounds.Cut.Chop"
               CanCauseTrauma="TRUE"
               Damage="8" Pain="30" Bleed="0.18"/>

        <!-- Gunshot wounds -->
        <!-- <Wound Key="GrazingGsw" LocKey="Wounds.Gsw.Grazing"
               Damage="1" Pain="8" Bleed="0.03"/> -->
        <Wound Key="FleshGsw" LocKey="Wounds.Gsw.Flesh"
               Damage="4" Pain="15" Bleed="0.1"/>
        <Wound Key="PenetratingGsw" LocKey="Wounds.Gsw.Penetrating"
               CanCauseTrauma="TRUE"
               Damage="7" Pain="25" Bleed="0.15"/>
        <Wound Key="PerforatingGsw" LocKey="Wounds.Gsw.Perforating"
               CanCauseTrauma="TRUE"
               Damage="8" Pain="30" Bleed="0.2"/>
        <Wound Key="LaceratingGsw" LocKey="Wounds.Gsw.Lacerating"
               CanCauseTrauma="TRUE"
               Damage="10" Pain="35" Bleed="0.25"/>
        <Wound Key="AvulsiveGsw" LocKey="Wounds.Gsw.Avulsive"
               CanCauseTrauma="TRUE"
               Damage="15" Pain="50" Bleed="0.35"/>
    </Wounds>
</WoundConfig>