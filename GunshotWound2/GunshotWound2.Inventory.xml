<?xml version="1.0" encoding="utf-8"?>
<InventoryConfig>
    <BlipsToMedkits Value="TRUE" RefreshTime="2" ModelName="prop_ld_health_pack"/>
    <!-- Add map blips to medkits around player, refresh time in seconds -->

    <!-- GSW will give these items to every new character with inventory -->
    <DefaultLoadout>
        <Item Key="Bandages" Count="4"/>
    </DefaultLoadout>

    <!-- These items you'll receive when pickup Medkit -->
    <MedkitLoadout>
        <Item Key="Bandages" Count="3"/>
    </MedkitLoadout>

    <!-- These items you'll receive when entering emergency vehicle -->
    <EmergencyVehicleLoadout>
        <Item Key="Bandages" Count="2"/>
    </EmergencyVehicleLoadout>
</InventoryConfig>